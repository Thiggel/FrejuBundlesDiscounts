<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="shopware_storefront.free_add_articles_service"
                 class="FrejuBundlesDiscounts\Bundle\StoreFrontBundle\FreeAddArticlesService">
            <argument type="service" id="dbal_connection"/>
        </service>

        <service id="shopware_storefront.list_product_service" class="FrejuBundlesDiscounts\Bundle\StoreFrontBundle\ListProductService">
            <argument type="service" id="shopware_storefront.free_add_articles_service"/>
            <argument type="service" id="shopware_storefront.list_product_gateway"/>
            <argument type="service" id="shopware_storefront.graduated_prices_service"/>
            <argument type="service" id="shopware_storefront.cheapest_price_service"/>
            <argument type="service" id="shopware_storefront.price_calculation_service"/>
            <argument type="service" id="shopware_storefront.media_service"/>
            <argument type="service" id="shopware_storefront.marketing_service"/>
            <argument type="service" id="shopware_storefront.vote_service"/>
            <argument type="service" id="shopware_storefront.category_service" />
            <argument type="service" id="config" />
        </service>

        <service id="freju_bundles_discounts.subscriber.templates" class="FrejuBundlesDiscounts\Subscriber\TemplateRegistration">
            <argument>%freju_bundles_discounts.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>
